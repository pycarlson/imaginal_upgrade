<div class="search-form-container">

  <h2>Looking for any film in particular?</h2>
  <%= form_tag(videos_path, :method => 'get', class: "navbar-form", id: "search-form") do %>

  <div class="search col-lg-4">
    <div class="input-group">
      <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Videos" %>
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
      </span>
    </div>
  </div>
  <% end %>

  <div class="add-vids-container">
    <ul>
      <% @videos.each do |video| %>
      <li>
        <div class="images">
          <%= link_to image_tag(video.thumbnail_link), video_path(video) %>
        </div>
        <div class="index-caption">
          <%= link_to (truncate(video.title, length: 50)), video_path(video) %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
  
  <%= render 'form' %>

</div>

