<div class="search-form-container">

  <h2>Looking for any film in particular?</h2>
  <%= form_tag(videos_path, :method => 'get', class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Videos" %>
    <button class="btn" type="submit"><i class="icon-search"></i></button>
    <% end %>
  </div>

  <div class="add-vids-container">
    <ul>
      <% @videos.each do |video| %>
      <li>
        <div class="images">
          <%= link_to image_tag(video.thumbnail_link), video_path(video) %>
        </div>
        <div class="index-caption">
          <%= link_to (truncate(video.title, length: 50)), video_path(video) %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
  
<%= render 'form' %>

</div>

