<div class="search-form-container">

  <h2>Looking for any film in particular?</h2>
  <%= form_tag(videos_path, :method => 'get', class: "navbar-form", id: "search-form") do %>

  <div class="search col-lg-4">
    <div class="input-group">
      <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Videos" %>
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
      </span>
    </div>
  </div>
  <% end %>

  <%= render 'shared/videos' %>

  <%= render 'form' %>

</div>

