<div class="navbar">
  <div class="inner-nav">
    <ul>
      <li class="nav-left logo"><%= link_to image_tag("logo.png"), root_path %></li>
      <% if user_signed_in? %>
        <li class="to-sub-vid-modal"><a href="#submit-video"></a></li>
        <% if current_user && current_user.is_admin? %>
                <li class="nav-right"><%= link_to "ADMIN", '/admin' %></li>
        <% end %>

        <li class="nav-right thumb"><a href="http://facebook.com/<%=current_user.uid %>"><img alt="Signed in as <%=current_user.name %>" title="Signed in as <%=current_user.name %>" src="https://graph.facebook.com/<%= current_user.uid %>/picture?type=square" /></a></li>
        <li class="nav-right"><%= link_to "SIGN OUT", destroy_user_session_path, :method => :delete %></li>
        <li class="nav-right"><%= link_to "MY VIDEOS", profile_path(current_user.profile) %></li>
        <li class="nav-right"><%= link_to "ALL VIDEOS", videos_path %></li>
      <% else %>
        <li class="to-sub-vid-modal"><a href="#submit-video"></a></li>
        <li class="nav-right"><%= link_to "SIGN IN WITH FACEBOOK", user_omniauth_authorize_path(:facebook) %></li>
        <li class="nav-right"><%= link_to "ALL VIDEOS", videos_path %></li>
      <% end %>
    </ul>
 </div>
</div>


